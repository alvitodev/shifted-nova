---
import Panel from '@/components/Panel.astro'
import { Badge } from '@/components/ui/badge'
import Layout from '@/layouts/Layout.astro'
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import { getCollection, render } from 'astro:content'

// 1. Generate Static Paths untuk semua item di koleksi 'work'
export async function getStaticPaths() {
  const projects = await getCollection('work')
  return projects.map((project) => ({
    params: { id: project.id },
    props: { project },
  }))
}

const { project } = Astro.props
const { Content } = await render(project)
---

<Layout 
  title={project.data.title} 
  description={project.data.description}
  image={project.data.heroImage?.src}
  type="article"
  publishDate={project.data.publishDate}
>
  <div class="mx-auto min-h-screen max-w-7xl p-4 md:p-8">
    {/* Navigasi Kembali */}
    <div class="mb-6 flex items-center justify-between">
      <a
        href="/"
        class="group flex items-center gap-2 font-mono text-xs text-muted-foreground transition-colors hover:text-yellow-500"
      >
        <Icon
          name="lucide:arrow-left"
          class="size-3 transition-transform group-hover:-translate-x-1"
        />
        RETURN_TO_BASE
      </a>
      <span class="font-mono text-[10px] text-muted-foreground">
        PROJECT_ID: {project.id.toUpperCase()}
      </span>
    </div>

    <div class="grid grid-cols-1 gap-6 lg:grid-cols-12 lg:gap-8">
      {/* --- KOLOM KIRI: DATA TEKNIS (4 Kolom) --- */}
      <div class="flex flex-col gap-6 lg:col-span-4">
        <Panel title="// PROJECT_SPECS" class="h-fit">
          {/* Thumbnail Image */}
          {
            project.data.heroImage && (
              <div class="group relative mb-6 overflow-hidden rounded border border-border bg-card">
                <div class="pointer-events-none absolute inset-0 z-10 bg-yellow-500/10 opacity-0 mix-blend-overlay transition-opacity group-hover:opacity-100" />
                <Image
                  src={project.data.heroImage}
                  alt={project.data.title}
                  width={600}
                  height={400}
                  class="h-auto w-full object-cover grayscale-[0.2] transition-all duration-500 group-hover:grayscale-0"
                />
              </div>
            )
          }

          <div class="space-y-6 font-mono text-sm">
            {/* Status Status */}
            <div>
              <span class="mb-2 block text-xs text-muted-foreground"
                >CURRENT_STATUS</span
              >
              <div
                class={`inline-flex items-center gap-2 px-3 py-1.5 border rounded-md ${
                  project.data.status === 'completed'
                    ? 'border-green-900/50 bg-green-900/10 text-green-500'
                    : project.data.status === 'in-progress'
                      ? 'border-yellow-900/50 bg-yellow-900/10 text-yellow-500'
                      : 'border-border bg-muted text-muted-foreground'
                }`}
              >
                <span class={`relative flex h-2 w-2`}>
                  <span
                    class={`animate-ping absolute inline-flex h-full w-full rounded-full opacity-75 ${
                      project.data.status === 'completed'
                        ? 'bg-green-400'
                        : 'bg-yellow-400'
                    }`}></span>
                  <span
                    class={`relative inline-flex rounded-full h-2 w-2 ${
                      project.data.status === 'completed'
                        ? 'bg-green-500'
                        : 'bg-yellow-500'
                    }`}></span>
                </span>
                <span class="text-xs font-bold tracking-wider uppercase">
                  {project.data.status}
                </span>
              </div>
            </div>

            {/* Tech Stack */}
            <div>
              <span class="mb-2 block text-xs text-muted-foreground"
                >TECHNOLOGY_STACK</span
              >
              <div class="flex flex-wrap gap-1.5">
                {
                  project.data.techStack.map((t) => (
                    <Badge
                      variant="outline"
                      className="rounded-md border-border bg-muted/50 text-foreground text-[10px] uppercase tracking-wider hover:border-yellow-500/50 transition-colors"
                    >
                      {t}
                    </Badge>
                  ))
                }
              </div>
            </div>

            {/* Action Buttons (Repo / Demo) */}
            <div class="flex flex-col gap-3 border-t border-border pt-6">
              {
                project.data.demoLink && (
                  <a
                    href={project.data.demoLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex w-full items-center justify-center gap-2 rounded-sm bg-yellow-600 py-2.5 text-xs font-bold tracking-widest text-primary-foreground uppercase shadow-[0_0_10px_rgba(234,179,8,0.2)] transition-all hover:bg-yellow-500 hover:shadow-[0_0_20px_rgba(234,179,8,0.4)]"
                  >
                    <Icon name="lucide:external-link" class="size-3" />
                    Launch_System
                  </a>
                )
              }

              {
                project.data.repoLink && (
                  <a
                    href={project.data.repoLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex w-full items-center justify-center gap-2 rounded-sm border border-border bg-muted/50 py-2.5 text-xs font-medium tracking-widest text-muted-foreground uppercase transition-all hover:border-foreground hover:text-foreground"
                  >
                    <Icon name="lucide:github" class="size-3" />
                    Source_Code
                  </a>
                )
              }
            </div>
          </div>
        </Panel>
      </div>

      {/* --- KOLOM KANAN: KONTEN DOKUMENTASI (8 Kolom) --- */}
      <div class="lg:col-span-8">
        <Panel title="// CLASSIFIED_DOCUMENT" class="min-h-full">
          <header class="mb-8 border-b border-border pb-6">
            <h1
              class="text-foreground mb-4 font-mono text-3xl font-black tracking-tight uppercase md:text-4xl"
            >
              {project.data.title}
            </h1>
            <p
              class="border-l-2 border-yellow-500/50 py-1 pl-4 font-mono text-sm leading-relaxed text-muted-foreground"
            >
              {project.data.description}
            </p>
          </header>

          <article
            class="prose dark:prose-invert prose-zinc prose-headings:font-mono prose-headings:uppercase prose-headings:tracking-tight prose-h2:text-yellow-600 dark:prose-h2:text-yellow-500 prose-h2:border-b prose-h2:border-border prose-h2:pb-2 prose-h2:mt-10 prose-a:text-yellow-600 dark:prose-a:text-yellow-500 hover:prose-a:text-yellow-500 dark:hover:prose-a:text-yellow-400 prose-a:no-underline hover:prose-a:underline prose-code:text-yellow-600 dark:prose-code:text-yellow-200 prose-code:bg-muted prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:before:content-none prose-code:after:content-none prose-pre:border prose-pre:border-border prose-pre:bg-muted/80 prose-img:rounded prose-img:border prose-img:border-border max-w-none"
          >
            <Content />
          </article>

          {/* Footer Document */}
          <div
            class="mt-16 flex items-end justify-between border-t border-border pt-8"
          >
            <div class="flex flex-col gap-1">
              <span class="font-mono text-[10px] text-muted-foreground"
                >AUTHORIZED_BY</span
              >
              <span class="font-mono text-xs text-muted-foreground"
                >ALVITO.DEV ADMIN</span
              >
            </div>
            <div class="flex flex-col gap-1 text-right">
              <span class="font-mono text-[10px] text-muted-foreground"
                >DATE_LOGGED</span
              >
              <span class="font-mono text-xs text-muted-foreground">
                {
                  project.data.publishDate
                    .toLocaleDateString('en-GB', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric',
                    })
                    .toUpperCase()
                }
              </span>
            </div>
          </div>
        </Panel>
      </div>
    </div>
  </div>
</Layout>
